<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.autotrade.dao.PopedomDao">
	
	
	<!-- 根据用户id查询所有权限 -->
	<!-- List<Popedom> findPopedomByUserId(Long id); -->
	<select id="findPopedomByUserId" resultType="com.autotrade.entity.Popedom">
		select
			p.*
		from t_user u 
			 join t_user_popedom up on u.id = up.user_id
			 join t_popedom p on up.p_id = p.p_id
		where u.id=#{id}
	</select>
	
	
	<!-- 根据用户Id删除权限  -->
	<!-- Integer deletePopedomById(Long id) -->
	<delete id="deletePopedomById">
		delete from t_user_popedom  where user_id=#{id}
	</delete>
	
	
	<!-- 根据用户id添加权限-->
	<!-- Integer addPopedomById(UserPopedom userPopedom); -->
	<insert id="addPopedomById" parameterType="com.autotrade.entity.UserPopedom">
		insert into
			t_user_popedom(
				id,
				user_id,
				p_id,
				update_time
			)values(
				null,
				#{userId},
				#{pId},
				#{updateTime}
			)
	</insert>
	
	
	<!-- 分页查询用户信息 -->
	<!-- List<User> findByLimit(Integer page, Integer limit) -->
	<select id="findByLimit" resultType="com.autotrade.entity.User">
		select * from t_user limit #{page},#{limit}
	</select>
	
	
	<!-- 无条件查询有所用户信息 -->
	<!-- List<User> findAll() -->
	<select id="findAll" resultType="com.autotrade.entity.User">
		select * from t_user;
	</select>
	
	
	<!-- 根据电话号码分页查询用户信息 -->
	<!-- List<User> findUserByPhone(@Param("phones")String phones, @Param("page")Integer page, @Param("limit")Integer limit) -->
	<select id="findUserByPhone" resultType="com.autotrade.entity.User">
		select * from t_user where phone like #{phones} limit #{page},#{limit}
	</select>
	
	
	<!-- 查询符合电话号码条件的用户条数 -->
	<!-- Integer findPhoneCount(String phones) -->
	<select id="findPhoneCount">
		select count(*) from t_user where phone like #{phones}
	</select>
</mapper>


















